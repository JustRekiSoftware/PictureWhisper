<Page
    x:Class="PictureWhisper.Client.Views.ReplyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PictureWhisper.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:PictureWhisper.Client.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="CommentUserButton" Click="CommentUserButton_Click"
                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                    <Ellipse Width="40" Height="40">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{x:Bind CommentDto.PublisherAvatar, Mode=OneWay}"
                                    Stretch="UniformToFill" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Button>
                <TextBlock Text="{x:Bind CommentDto.PublisherInfo.U_Name, Mode=OneWay}" Margin="0,5,0,0" />
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Bind CommentDto.CommentInfo.C_Date, Mode=OneWay}" />
                    <Button x:Name="MoreButton" Grid.Row="1" Margin="10,10,10,10"
                            HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button.Content>
                            <SymbolIcon Symbol="More" />
                        </Button.Content>
                        <Button.Flyout>
                            <Flyout>
                                <Flyout.FlyoutPresenterStyle>
                                    <Style TargetType="FlyoutPresenter">
                                        <Setter Property="ScrollViewer.HorizontalScrollMode" 
                                                Value="Disabled"/>
                                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" 
                                                Value="Disabled"/>
                                        <Setter Property="IsTabStop" Value="True"/>
                                        <Setter Property="TabNavigation" Value="Cycle"/>
                                    </Style>
                                </Flyout.FlyoutPresenterStyle>
                                <StackPanel>
                                    <Button x:Name="CommentReportButton" Content="举报" 
                                            Click="CommentReportButton_Click" />
                                    <Button x:Name="CommentDeleteButton" Content="删除" 
                                            Click="CommentDeleteButton_Click" 
                                            Visibility="Collapsed" />
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
                <TextBlock Text="{x:Bind CommentDto.CommentInfo.C_Content, Mode=OneWay}" Margin="0,5,0,0" />
                <HyperlinkButton x:Name="ReplyCommentHyperlinkButton" 
                                 Click="ReplyCommentHyperlinkButton_Click"
                                 Margin="0,5,0,0">
                    <TextBlock Text="回复" />
                </HyperlinkButton>
            </StackPanel>
        </StackPanel>
        <ScrollViewer x:Name="ReplyScrollViewer"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Hidden"
                      ViewChanged="ReplyScrollViewer_ViewChanged"
                      Grid.Row="0" Grid.ColumnSpan="2">
            <ListView ItemsSource="{x:Bind ReplyLVM.CommentReplys, Mode=OneWay}"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:ReplyDto">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel HorizontalAlignment="Center">
                                <Button x:Name="ReplyUserButton" Click="ReplyUserButton_Click"
                                        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                                    <Ellipse Width="40" Height="40">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{x:Bind PublisherAvatar}"
                                                    Stretch="UniformToFill" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Button>
                                <TextBlock Text="{x:Bind PublisherInfo.U_Name}" Margin="0,5,0,0" />
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="{x:Bind ReplyInfo}" />
                                    <Button x:Name="MoreButton" Grid.Row="0" Margin="10,10,10,10"
                                            HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <Button.Content>
                                            <SymbolIcon Symbol="More" />
                                        </Button.Content>
                                        <Button.Flyout>
                                            <Flyout>
                                                <Flyout.FlyoutPresenterStyle>
                                                    <Style TargetType="FlyoutPresenter">
                                                        <Setter Property="ScrollViewer.HorizontalScrollMode" 
                                                                Value="Disabled"/>
                                                        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" 
                                                                Value="Disabled"/>
                                                        <Setter Property="IsTabStop" Value="True"/>
                                                        <Setter Property="TabNavigation" Value="Cycle"/>
                                                    </Style>
                                                </Flyout.FlyoutPresenterStyle>
                                                <StackPanel>
                                                    <Button x:Name="ReplyReportButton" Content="举报" 
                                                            Click="ReplyReportButton_Click" />
                                                    <Button x:Name="ReplyDeleteButton" Content="删除" 
                                                            Click="ReplyDeleteButton_Click" 
                                                            Visibility="{x:Bind DeleteButtonVisibility}" />
                                                </StackPanel>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                                <TextBlock Text="{x:Bind ReplyInfo}" Margin="0,5,0,0" />
                                <HyperlinkButton x:Name="ReplyHyperlinkButton" 
                                                 Click="ReplyHyperlinkButton_Click"
                                                 Margin="0,5,0,0">
                                    <TextBlock Text="回复" />
                                </HyperlinkButton>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <TextBox x:Name="ReplyTextBox" PlaceholderText="有什么想说的？" Height="70" 
                 AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="2" Grid.Column="0" />
        <TextBlock x:Name="ErrorMsgTextBlock" Margin="0,10,10,10" 
                       Foreground="red" Visibility="Collapsed" Grid.Row="2" Grid.Column="0" />
        <Button x:Name="ReplySendButton" Content="发表回复" Height="70"
                Grid.Row="2" Grid.Column="1" Click="ReplySendButton_Click"
                Background="{StaticResource SystemAccentColor}" />
    </Grid>
</Page>
